<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:orientation="vertical"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View android:layout_width="1.5dp" android:layout_height="match_parent" android:background="#555"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_lukou"/>
            <View android:layout_width="1.5dp" android:layout_height="match_parent" android:background="#555"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_hong"/>
            <View android:layout_width="1.5dp" android:layout_height="match_parent" android:background="#555"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_lv"/>
            <View android:layout_width="1.5dp" android:layout_height="match_parent" android:background="#555"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_huang"/>
            <View android:layout_width="1.5dp" android:layout_height="match_parent" android:background="#555"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
